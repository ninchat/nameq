#!/bin/sh

set -e

case "$1" in
    configure)
        ! test -d /var/lib/nameq || chown dnsmasq:root /var/lib/nameq
        ! test -d /var/run/nameq || chown dnsmasq:root /var/run/nameq
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
